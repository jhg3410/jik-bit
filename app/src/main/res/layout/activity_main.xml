<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.main.MainActivity">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">
        </androidx.viewpager2.widget.ViewPager2>

        <github.com.st235.lib_expandablebottombar.ExpandableBottomBar
            android:id="@+id/bottomNavigationView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="46dp"
            app:exb_backgroundCornerRadius="16dp"
            app:exb_item_horizontal_margin="30dp"
            app:exb_item_vertical_margin="8dp"
            app:exb_backgroundColor="#FFFFFF"
            app:exb_items="@menu/bottom_navigation_menu"
            app:exb_transitionDuration="150"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </github.com.st235.lib_expandablebottombar.ExpandableBottomBar>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>